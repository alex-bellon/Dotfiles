# Programs
alt - return : open -n /Applications/iTerm.app
lctrl + alt - f : open /System/Library/CoreServices/Finder.app
lctrl + alt - b : open /Applications/Firefox.app

# Focus
alt - left : yabai -m window --focus west
alt - down : yabai -m window --focus south
alt - up : yabai -m window --focus north
alt - right : yabai -m window --focus east

# Move
shift + alt - left : yabai -m window --warp west
shift + alt - down : yabai -m window --warp south
shift + alt - up : yabai -m window --warp north
shift + alt - right : yabai -m window --warp east

# Move focus container to workspace
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6

# Change workspace
alt - 0x12 : yabai -m space --focus 1
alt - 0x13 : yabai -m space --focus 2
alt - 0x14 : yabai -m space --focus 3
alt - 0x15 : yabai -m space --focus 4
alt - 0x17 : yabai -m space --focus 5
alt - 0x16 : yabai -m space --focus 6

# Resize windows
alt - 0x2B : yabai -m window --resize left:-25:0; yabai -m window --resize right:-25:0 # comma, left
alt - 0x2F : yabai -m window --resize right:25:0; yabai -m window --resize left:25:0 # period, right

lctrl - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

lctrl - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

# Equalize size of windows
alt - b: yabai -m space --balance

# Float / Unfloat window
shift + alt - f : yabai -m window --toggle float

# Restart Yabai
shift + alt - r : brew service restart yabai

# Make window native fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
ctrl + alt - f : yabai -m window --toggle native-fullscreen
